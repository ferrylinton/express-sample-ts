{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "baseUrl": ".",
    "outDir": "./dist",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "removeComments": true,
    "strict": true,
    "sourceMap": false,
    "lib": [
      "ES2021.String"
    ],
    "paths": {
      "@/*": ["src/*", "test/*"]
    }
  },
  "include": [
    "src/**/*.ts",
    "test/**/*.ts",
    "src/**/*.json",
    ".env"
  ],
  "exclude": [
    "node_modules", "dist", "coverage"
  ],
  "ts-node": {
    "transpileOnly": true,
    "compilerOptions": {
      "module": "commonjs"
    }
  }
}