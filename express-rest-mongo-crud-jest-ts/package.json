{
  "name": "mongodb-jest-crud-ts",
  "version": "1.0.0",
  "description": "Simple CRUD Example of Mongodb and JEST with Typescript",
  "main": "./dist/server.js",
  "scripts": {
    "clean": "rimraf dist",
    "build": "npm run clean && npx tsc",
    "start": "cross-env NODE_ENV=production node ./dist/server.js",
    "dev": "cross-env NODE_ENV=development ts-node ./src/server.ts",
    "test": "cross-env NODE_ENV=test jest --runInBand --detectOpenHandles --forceExit"
  },
  "keywords": [
    "typescript",
    "mongodb",
    "jest"
  ],
  "author": "ferrylinton",
  "license": "ISC",
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "jest": "^29.7.0",
    "mongodb-memory-server": "^7.6.3",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "mongodb": "^6.3.0"
  }
}
